export XDG_CONFIG_HOME=$HOME/.config

export EDITOR="vim"
export PAGER=less

export MUTT_REALNAME="Matteo Muscella"
export MUTT_EMAIL_ADDRESS="matteo.muscella@gmail.com"

export LANG="en_US.UTF-8"
export LC_CTYPE="en_US.UTF-8"
export LC_ALL="en_US.UTF-8"

export MONGODBPORT=27017

export TEXMFDIR=$HOME/.texmf

export LS_COLORS='di=1:fi=0:ln=31:pi=5:so=5:bd=5:cd=5:or=31:mi=0:ex=35:*.rpm=90'
#export LS_COLORS=exfxcxdxbxegedabagacad

export M2_HOME=/usr/local/Cellar/maven/3.3.9/libexec
export M2=$M2_HOME/bin
export MYPYTHONPATH=/usr/lib/python3.6/site-packages/
export GOPATH=$HOME/Developer/Go
export MYPATH=$HOME/usr/bin:$HOME/usr/local/bin:$HOME/usr/bin
export PATH=$PATH:$GOPATH/bin:$M2:$MYPATH:$MYPYTHONPATH

