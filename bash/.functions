#------------------------------------------------
# Get external ip address
#------------------------------------------------
function extip()#{{{
{
    echo $(curl -s 'http://myexternalip.com/raw')
}#}}}

#------------------------------------------------
# Check if i am home
#------------------------------------------------
function iamhome()#{{{
{
    IP_ADDRESS="2.235.177.223"
    [ "$IP_ADDRESS" == "$(extip)" ] ; echo $?
}#}}}

